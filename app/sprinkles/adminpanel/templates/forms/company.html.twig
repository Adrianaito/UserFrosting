<form class="js-form" action="{{site.uri.public}}/companies/register_company" enctype='multipart/form-data' method="post">
    {% include "forms/csrf.html.twig" %}
    <div class="js-form-alerts">
    </div>
    <div class="form-group has-feedback">
        <label>Company Name</label>
        <input type="text" class="form-control" name="name" required>
    </div>
    <div class="form-group has-feedback">
        <label>email</label>
        <input type="email" class="form-control" name="email" required>
    </div>
    <div class="form-group has-feedback">
        <label>logo</label>
        <input id='logo_file' type="file" class="form-control" name="logo" required multiple accept="image/*"
            onchange="document.getElementById('logo_create_preview').src = window.URL.createObjectURL(this.files[0]); document.getElementById('logo_create_preview').style.display = 'block';">
        <img hidden id="logo_create_preview" alt="logo_create_preview" width="100" height="100" />
    </div>
    <div class="form-group has-feedback">
        <label>website</label>
        <input type="text" class="form-control" name="website" required>
    </div>
    <div class="row">
        <div class="col-xs-8 col-sm-4">
            <button type="submit" class="btn btn-block btn-lg btn-success">Create</button>
        </div>
        <div class="col-xs-4 col-sm-3 pull-right">
            <button type="button" class="btn btn-block btn-lg btn-link" data-dismiss="modal">Cancel</button>
        </div>
    </div>
</form>
<!-- Include validation rules -->
<script>
{% include "pages/partials/page.js.twig" %}
</script>
