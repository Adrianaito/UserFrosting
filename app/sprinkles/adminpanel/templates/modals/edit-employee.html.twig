{% extends "modals/modal.html.twig" %}

{% block modal_title %}Edit employee{% endblock %}

{% block modal_body %}
<form class="js-form" action="{{site.uri.public}}/companies/edit_employee" enctype='multipart/form-data' method="post">
    {% include "forms/csrf.html.twig" %}
    <input type="hidden" id="employee_id" name="id" value="{{id}}" required>
    <div class="form-group has-feedback">
        <label>employee First Name</label>
        <input type="text" class="form-control" name="name" value="{{firstname}}" required>
    </div>
     <div class="form-group has-feedback">
        <label>employee Last Name</label>
        <input type="text" class="form-control" name="name" value="{{lastname}}" required>
    </div>
    <div class="form-group has-feedback">
        <label>email</label>
        <input type="email" class="form-control" name="email" value="{{email}}" required>
    </div>
    <div class="form-group has-feedback">
        <label>phone</label>
        <input type="phone" class="form-control" name="phone" value="{{phone}}" required>
    </div>
    <div class="form-group has-feedback">
        <label>company</label>
        <input type="select" class="form-control" name="company" value="{{company}}" required>

    </div>
    <div class="js-form-alerts">
    </div>
    <br>
    <div class="btn-group-action">
        <button type="submit" class="btn btn-success btn-lg btn-block">Update</button>
        <button type="button" class="btn btn-default btn-lg btn-block" data-dismiss="modal">Cancel</button>
    </div>
</form>
{% endblock %}
